@model IEnumerable<WebSite.Models.Item>

@{
    ViewBag.Title = "Produtos";
}

<!DOCTYPE html>
<head>
    <link href="~/CSS/StyleSheet2.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Carofour - Produtos por Categoria</title>
</head>

<body>
    <div id="container">

        <div id="idiomas">Português / Espanhol</div>
        <div id="cabecalho">
            <div id="CarrinhoCompras"></div>
            Carofour
        </div>


        <div id="botoes">
            <div id="btnCarrinho"><input type="button" name=btnCarrinho value="Ver Carrinho" onclick="location.href='@Url.Action("Carrinho", "Principal")'"> </div>
            <div id="btnComprarProduto"><input type="button" name=btnComprarProduto value="Comprar Produto(s)"/></div>
            <div id="btnFecharCompra"><input type="button" name=btnFechaCompra value="Fechar Compra" onclick="location.href='@Url.Action("ConfirmaCompra","Principal")'"/></div>
        </div>


        <div id="conteudo">
            <div id="boasVindas">
                <div id="laticinios"><a href="@Url.Action("Produtos", "Principal", new { produto = "Laticinios" })'"> <img alt="laticinio" src="../Resources/laticinios2.jpg" /> </a></div>
                <div id="carnes"></div>
                <div id="padaria"></div>
                <div id="hortifrutigranjeiros"></div>
            </div>

            <div id="grid">

                <table>
                    <tr>
                        <th>&nbsp</th>
                        <th>&nbsp Nome/Descrição</th>
                        <th>&nbsp Preço &nbsp</th>
                        <th>&nbsp Quantidade</th>
                        <th>&nbsp</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="produtoId" value="@Html.DisplayFor(modelItem => item.id)" /></td>
                            <td>@Html.DisplayFor(modelItem => item.descricao)</td>
                            <td>@Html.DisplayFor(modelItem => item.preco)</td>
                            <td>@Html.TextBox(item.id.ToString(), 1, new { size = "20" })</td>
                            <td>@Html.ActionLink("Comprar", "Comprar")</td>
                        </tr>
                    }
                </table>

            </div>

            <div class="clear"></div>

        </div>

        <div id="rodape">
            @Html.ActionLink("Voltar para página inicial", "Index")
            <hr>Carofour - contato@carofour.com.br
        </div>

    </div>
</body>
